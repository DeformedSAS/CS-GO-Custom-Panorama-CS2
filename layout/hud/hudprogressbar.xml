<root>
  <styles>
    <include src="file://{resources}/styles/csgostyles.css" />
    <include src="file://{resources}/styles/hud/hudprogressbar.css" />
    </styles>
    <CSGOHudProgressBar hittest="false" class="hud-progress-bar">
        <Panel class="full-width full-height">
            <Panel class="hud-progress-bar-side additive cl-hud-wash-color progress-bar-animating" progress-animation="side-empty-to-full" />
            <Panel class="hud-progress-bar-side horizontal-align-right additive cl-hud-wash-color progress-bar-animating" progress-animation="side-empty-to-full" />
            <Panel class="hud-progress-bar-layout">
                <Panel class="hud-progress-bar-circle">
                    <Panel class="hud-progress-bar-circle-background" />
                    <Panel class="hud-progress-bar-circle-animator progress-bar-animating" progress-animation="circle-full-to-empty" />
                    <Image id="ActionIcon" src="file//{images}/icons/equipment/defuser.svg" class="hud-progress-bar-circle-icon" scaling="stretch-to-fit-preserve-aspect" />
                    <Panel class="hud-progress-bar-circle-border-inner" />
                </Panel>
                <Panel class="hud-progress-bar-info">
                    <Label id="ActionLabel" class="hud-progress-bar-info-title stratum-bold-mono" />
                    <Label text="{t:d:duration}.{s:milliseconds} " class="hud-progress-bar-info-countdown-text stratum-bold-mono" />
                </Panel>
            </Panel>
        </Panel>
    </CSGOHudProgressBar>
</root>

