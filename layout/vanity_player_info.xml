
<root>
	<styles>
		<include src="file://{resources}/styles/csgostyles.css" />
		<include src="file://{resources}/styles/vanity_player_info.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/common/teamcolor.js" />
		<include src="file://{resources}/scripts/common/sessionutil.js" />
	</scripts>
	<Panel hittest="false" hittestchildren="true" useglobalcontext="true">
		<Image id="vanity-crown-icon" class="vanity-info-crown-icon" src="file://{images}/icons/ui/lobby_leader.svg" />
		<Panel class="left-right-flow horizontal-center bottom-margin">
			<Label class="stratum-medium-condensed fontSize-ml fontcolor-white vanity-info-name" text="{s:player_name}" />
		</Panel>
		<Panel id="vanity-info-container" class="vanity-info-container" hittest="true">
			<Panel id="vanity-avatar-container" class="vanity-info-avatar-container" />
			<Panel class="vanity-info-seperator" />
			<Panel id="vanity-xp-container" class="vanity-info-xp-bar-container">
				<Panel class="vanity-info-xp-container">
					<Image id="vanity-xp-icon" class="vanity-info-xp-icon" />
				</Panel>
				<Panel class="vanity-info-xp-bar">
					<Panel id="vanity-xp-bar-inner" class="vanity-info-xp-bar--inner" />
				</Panel>
			</Panel>
			<Panel class="vanity-info-seperator" />
			<Panel id="vanity-rating-container" class="vanity-info-skill-group-container">
				<Panel class="vanity-rating__icon-container">
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
